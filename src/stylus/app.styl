body
	overflow-x: hidden
	margin: 0
	padding: 0
	background: linear-gradient(#1072bc, #2fa1f2)
	min-height: 100%
	
#background
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	background: linear-gradient(#1072bc, #2fa1f2)
	z-index: -2
	
#dots
	position: absolute
	top: 0
	left: 50%
	z-index: -1
	transform: translateX(-50%)
	// visibility: hidden
	// opacity: 0
	background: linear-gradient(#1072bc, #2fa1f2)
	
#encrypted
	position: absolute
	top: 50%
	left: 100px
	// top: 1150px
	// left: 50%
	transform: translateY(-50%)
	z-index: -1
	// visibility: hidden
	// opacity: 0
	
#unencrypted
	position: absolute
	top: 50%
	right: 100px
	// top: 1150px
	// left: 50%
	transform: translateY(-50%)
	z-index: -1
	// visibility: hidden
	// opacity: 0
	
img
	display: block
	margin: 0 auto
	visibility: hidden
	opacity: 0
	
#assets
	visibility: hidden
	opacity: 0
	height: 0
	width: 0